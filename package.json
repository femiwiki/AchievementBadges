{
  "private": true,
  "scripts": {
    "test": "npm -s run lint",
    "lint": "npm -s run lint:prettier && npm -s run lint:i18n",
    "lint:prettier": "prettier '**/*.{js,json,css,less,md,yml}' --check",
    "lint:i18n": "banana-checker --requireLowerCase=0 i18n/",
    "fix": "prettier '**/*.{js,json,css,less,md,yml}' --write",
    "selenium-daily": "npm run selenium-test",
    "selenium-test": "wdio tests/selenium/wdio.conf.js"
  },
  "devDependencies": {
    "grunt-banana-checker": "0.9.0",
    "prettier": "^2.3.1",
    "@wdio/cli": "7.4.6",
    "@wdio/dot-reporter": "7.7.3",
    "@wdio/junit-reporter": "7.4.2",
    "@wdio/local-runner": "7.4.6",
    "@wdio/mocha-framework": "7.4.6",
    "@wdio/sync": "7.4.6",
    "wdio-mediawiki": "1.1.1"
  }
}
